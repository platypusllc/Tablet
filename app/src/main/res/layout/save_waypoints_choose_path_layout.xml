<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/path_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/save_path_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saved_paths_listview_label"
        android:layout_toRightOf="@id/path_name_edittext"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Save path"/>

    <TextView
        android:id="@+id/saved_paths_listview_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="List of currently saved paths: "
        android:layout_below="@id/path_name_edittext"/>
    <ListView
        android:id="@+id/saved_paths_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/saved_paths_listview_label"/>




</RelativeLayout>